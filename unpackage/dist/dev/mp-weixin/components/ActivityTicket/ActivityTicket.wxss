
.ticket-container.data-v-cc16e5a8 {
  padding: 20rpx;
}
.ticket.data-v-cc16e5a8 {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  position: relative;
}

/* 主要内容区 */
.ticket-main.data-v-cc16e5a8 {
  padding: 40rpx 32rpx 30rpx;
}
.title.data-v-cc16e5a8 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.4;
}
.info-list.data-v-cc16e5a8 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.info-item.data-v-cc16e5a8 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.icon.data-v-cc16e5a8 {
  font-size: 24rpx;
  width: 40rpx;
  text-align: center;
}
.text.data-v-cc16e5a8 {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  line-height: 1.5;
}

/* 分割线 */
.divider.data-v-cc16e5a8 {
  position: relative;
  height: 1rpx;
  margin: 0 20rpx;
}
.dashed-line.data-v-cc16e5a8 {
  height: 1rpx;
  background-image: repeating-linear-gradient(
    to right,
    #ddd 0,
    #ddd 8rpx,
    transparent 8rpx,
    transparent 16rpx
  );
}
.notch.data-v-cc16e5a8 {
  position: absolute;
  top: -15rpx;
  width: 30rpx;
  height: 30rpx;
  background: #f5f5f5;
  border-radius: 50%;
}
.notch-left.data-v-cc16e5a8 {
  left: -35rpx;
}
.notch-right.data-v-cc16e5a8 {
  right: -35rpx;
}

/* 按钮区 */
.ticket-bottom.data-v-cc16e5a8 {
  padding: 30rpx 32rpx 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.action-btn.data-v-cc16e5a8 {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff416c, #ff4b2b);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(255, 65, 108, 0.3);
  transition: all 0.2s ease;
}
.action-btn.data-v-cc16e5a8:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 65, 108, 0.4);
}
.cancel-btn.data-v-cc16e5a8 {
  width: 100%;
  height: 80rpx;
  background: #fff;
  color: #999;
  border: 2rpx solid #e5e5e5;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}
.cancel-btn.data-v-cc16e5a8:active {
  transform: translateY(2rpx);
  background: #f8f8f8;
  border-color: #ddd;
  color: #666;
}
