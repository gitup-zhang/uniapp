
/* 消息项动画 */
.message-item.data-v-506a9f7c {
  animation: fadeInUp-506a9f7c 0.6s ease forwards;
  opacity: 0;
  transform: translateY(30rpx);
}
@keyframes fadeInUp-506a9f7c {
to {
    opacity: 1;
    transform: translateY(0);
}
}

/* 消息卡片 */
.message-card.data-v-506a9f7c {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(239, 68, 68, 0.08);
  border: 2rpx solid rgba(239, 68, 68, 0.05);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.message-card.data-v-506a9f7c:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(239, 68, 68, 0.12);
  border-color: rgba(239, 68, 68, 0.1);
}

/* 装饰线条 */
.decoration-line.data-v-506a9f7c {
  height: 6rpx;
  background: linear-gradient(90deg, #ef4444 0%, #f87171 50%, #fca5a5 100%);
}

/* 消息头部 */
.message-header.data-v-506a9f7c {
  display: flex;
  align-items: flex-start;
  padding: 32rpx 32rpx 16rpx;
  position: relative;
}
.message-icon.data-v-506a9f7c {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 3rpx solid rgba(239, 68, 68, 0.1);
  flex-shrink: 0;
}
.icon-text.data-v-506a9f7c {
  font-size: 32rpx;
}
.header-content.data-v-506a9f7c {
  flex: 1;
}
.title-line.data-v-506a9f7c {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 8rpx;
}
.message-title.data-v-506a9f7c {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
  flex: 1;
}
.message-time.data-v-506a9f7c {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}
.sender-info.data-v-506a9f7c {
  margin-top: 4rpx;
}
.sender-name.data-v-506a9f7c {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 消息内容 */
.message-body.data-v-506a9f7c {
  padding: 0 32rpx 32rpx;
}
.content-wrapper.data-v-506a9f7c {
  position: relative;
}

/* 富文本样式 */
.rich-text.data-v-506a9f7c {
  font-size: 28rpx;
  line-height: 1.8;
  color: #374151;
  text-align: justify;
  word-break: break-word;
}

