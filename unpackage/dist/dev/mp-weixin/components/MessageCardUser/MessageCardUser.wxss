.message-item.data-v-506a9f7c {
    animation: none;
}
.message-card.data-v-506a9f7c,
  .detail-btn.data-v-506a9f7c,
  .toggle-btn.data-v-506a9f7c,
  .toggle-icon.data-v-506a9f7c,
  .toggle-text.data-v-506a9f7c,
  .icon-arrow.data-v-506a9f7c {
    transition: none;
}
.toggle-btn.data-v-506a9f7c::before {
    display: none;
}
}

