
.message-card.data-v-d00e46f1 {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}
.message-card.data-v-d00e46f1::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: transparent;
  transition: all 0.3s ease;
}
.message-card.data-v-d00e46f1:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}
.message-card.unread.data-v-d00e46f1 {
  background: linear-gradient(135deg, #fff 0%, #f8faff 100%);
  box-shadow: 0 2rpx 12rpx rgba(24, 144, 255, 0.1);
}
.message-card.unread.data-v-d00e46f1::before {
  background: linear-gradient(180deg, #1890ff 0%, #40a9ff 100%);
}

/* 头像区域 */
.avatar-wrapper.data-v-d00e46f1 {
  position: relative;
  flex-shrink: 0;
}
.system-avatar.data-v-d00e46f1 {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
.system-icon.data-v-d00e46f1 {
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}
.group-avatar.data-v-d00e46f1 {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.unread-dot.data-v-d00e46f1 {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(255, 77, 79, 0.4);
  animation: pulse-d00e46f1 2s infinite;
}
@keyframes pulse-d00e46f1 {
0% {
    transform: scale(1);
}
50% {
    transform: scale(1.1);
}
100% {
    transform: scale(1);
}
}

/* 内容区域 */
.content-wrapper.data-v-d00e46f1 {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 标题和时间行 */
.header-row.data-v-d00e46f1 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}
.title-section.data-v-d00e46f1 {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
  min-width: 0;
}
.message-title.data-v-d00e46f1 {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  min-width: 0;
}
.unread .message-title.data-v-d00e46f1 {
  font-weight: 600;
  color: #1890ff;
}
.priority-badge.data-v-d00e46f1 {
  background: linear-gradient(135deg, #fa8c16 0%, #ffa940 100%);
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(250, 140, 22, 0.3);
  flex-shrink: 0;
}
.time-text.data-v-d00e46f1 {
  font-size: 24rpx;
  color: #8c8c8c;
  flex-shrink: 0;
}
.unread .time-text.data-v-d00e46f1 {
  color: #1890ff;
  font-weight: 500;
}

/* 消息内容 */
.message-content.data-v-d00e46f1 {
  font-size: 26rpx;
  color: #595959;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin: 8rpx 0;
}
.unread .message-content.data-v-d00e46f1 {
  color: #434343;
}

/* 底部元信息 */
.meta-info.data-v-d00e46f1 {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.source-tag.data-v-d00e46f1 {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 12rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}
.unread .source-tag.data-v-d00e46f1 {
  background: rgba(24, 144, 255, 0.1);
}
.source-text.data-v-d00e46f1 {
  font-size: 22rpx;
  color: #8c8c8c;
}
.unread .source-text.data-v-d00e46f1 {
  color: #1890ff;
}
.member-count.data-v-d00e46f1 {
  font-size: 20rpx;
  color: #bfbfbf;
  background: #ffffff;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}
.unread .member-count.data-v-d00e46f1 {
  color: #1890ff;
  background: rgba(255, 255, 255, 0.8);
}

/* 右侧操作区域 */
.action-wrapper.data-v-d00e46f1 {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.read-status.data-v-d00e46f1 {
  padding: 12rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}
.read-status.data-v-d00e46f1:active {
  background: rgba(24, 144, 255, 0.1);
}
.status-indicator.data-v-d00e46f1 {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #1890ff;
  transition: all 0.3s ease;
}
.status-indicator.read.data-v-d00e46f1 {
  background: #d9d9d9;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
.message-card.data-v-d00e46f1 {
    background: #1f1f1f;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}
.message-card.unread.data-v-d00e46f1 {
    background: linear-gradient(135deg, #1f1f1f 0%, #1a1a2e 100%);
}
.message-title.data-v-d00e46f1 {
    color: #ffffff;
}
.message-content.data-v-d00e46f1 {
    color: #cccccc;
}
.time-text.data-v-d00e46f1 {
    color: #999999;
}
.source-tag.data-v-d00e46f1 {
    background: #333333;
}
.source-text.data-v-d00e46f1 {
    color: #999999;
}
}
