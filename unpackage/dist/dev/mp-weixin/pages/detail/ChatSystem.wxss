
.system-message-page.data-v-82517712 {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff5f5 0%, #fef2f2 100%);
}

/* 导航栏 */
.custom-navbar.data-v-82517712 {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 50%, #b91c1c 100%);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  box-shadow: 0 8rpx 32rpx rgba(239, 68, 68, 0.3);
}
.nav-content.data-v-82517712 {
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}
.nav-left.data-v-82517712, .nav-right.data-v-82517712 {
  width: 120rpx;
  display: flex;
  align-items: center;
}
.nav-right.data-v-82517712 {
  justify-content: flex-end;
}
.back-btn.data-v-82517712 {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.back-btn.data-v-82517712:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}
.back-icon.data-v-82517712 {
  font-size: 44rpx;
  color: white;
  font-weight: 300;
  margin-left: -4rpx;
}
.nav-center.data-v-82517712 {
  flex: 1;
  display: flex;
  justify-content: center;
}
.nav-title.data-v-82517712 {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.message-count.data-v-82517712 {
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}
.count-text.data-v-82517712 {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
}

/* 消息列表 */
.message-list.data-v-82517712 {
  flex: 1;
  height: 100vh;
}
.list-wrapper.data-v-82517712 {
  padding: 32rpx 24rpx 140rpx;
}

/* 加载状态 */
.loading-container.data-v-82517712 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  gap: 32rpx;
}
.loading-spinner.data-v-82517712 {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(239, 68, 68, 0.1);
  border-left: 4rpx solid #ef4444;
  border-radius: 50%;
  animation: spin-82517712 1s linear infinite;
}
.loading-spinner.small.data-v-82517712 {
  width: 48rpx;
  height: 48rpx;
  border-width: 3rpx;
}
@keyframes spin-82517712 {
0% { transform: rotate(0deg);
}
100% { transform: rotate(360deg);
}
}
.loading-text.data-v-82517712 {
  font-size: 28rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 消息容器 */
.messages-container.data-v-82517712 {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 加载更多区域 */
.load-more-section.data-v-82517712 {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}
.loading-more.data-v-82517712 {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.load-more-tip.data-v-82517712 {
  padding: 16rpx 32rpx;
  background: rgba(239, 68, 68, 0.05);
  border-radius: 50rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.1);
}
.tip-text.data-v-82517712 {
  font-size: 26rpx;
  color: #9ca3af;
  font-weight: 500;
}

/* 无更多数据 */
.no-more-section.data-v-82517712 {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  padding: 48rpx 0;
}
.no-more-line.data-v-82517712 {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #fee2e2, transparent);
}
.no-more-text.data-v-82517712 {
  font-size: 26rpx;
  color: #9ca3af;
  font-weight: 500;
  white-space: nowrap;
}

/* 错误提示 */
.error-banner.data-v-82517712 {
  background: #fee2e2;
  border: 2rpx solid #fecaca;
  border-radius: 16rpx;
  margin: 24rpx 0;
  overflow: hidden;
}
.error-content.data-v-82517712 {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 16rpx;
}
.error-icon.data-v-82517712 {
  font-size: 32rpx;
}
.error-text.data-v-82517712 {
  flex: 1;
  font-size: 28rpx;
  color: #dc2626;
  font-weight: 500;
}
.retry-small-btn.data-v-82517712 {
  background: #dc2626;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}
.retry-small-btn.data-v-82517712:active {
  transform: scale(0.95);
  background: #b91c1c;
}
.retry-small-text.data-v-82517712 {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
}

/* 空状态 */
.empty-state.data-v-82517712 {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 32rpx;
}
.empty-illustration.data-v-82517712 {
  position: relative;
}
.empty-circle.data-v-82517712 {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 50%, #fecaca 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  animation: float-82517712 3s ease-in-out infinite;
  box-shadow: 0 16rpx 48rpx rgba(239, 68, 68, 0.15);
}
.empty-circle.data-v-82517712::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(239, 68, 68, 0.1);
  animation: pulse-82517712 2s ease-in-out infinite;
}
@keyframes float-82517712 {
0%, 100% { transform: translateY(0px);
}
50% { transform: translateY(-10rpx);
}
}
@keyframes pulse-82517712 {
0%, 100% { 
    transform: scale(1);
    opacity: 0.3;
}
50% { 
    transform: scale(1.1);
    opacity: 0.1;
}
}
.empty-icon.data-v-82517712 {
  font-size: 80rpx;
}
.empty-title.data-v-82517712 {
  font-size: 36rpx;
  font-weight: 700;
  color: #374151;
  text-align: center;
}
.empty-desc.data-v-82517712 {
  font-size: 28rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.6;
  max-width: 400rpx;
}
.retry-btn.data-v-82517712 {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.3);
  transition: all 0.3s ease;
  margin-top: 16rpx;
}
.retry-btn.data-v-82517712:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}
.retry-text.data-v-82517712 {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
.list-wrapper.data-v-82517712 {
    padding: 24rpx 16rpx 140rpx;
}
.empty-circle.data-v-82517712 {
    width: 160rpx;
    height: 160rpx;
}
.empty-icon.data-v-82517712 {
    font-size: 64rpx;
}
}

/* 暗黑模式支持 */
@media (prefers-color-scheme: dark) {
.system-message-page.data-v-82517712 {
    background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 100%);
}
.empty-circle.data-v-82517712 {
    background: linear-gradient(135deg, #2d1b1b 0%, #3c2626 50%, #4a2c2c 100%);
}
.empty-title.data-v-82517712 {
    color: #f9fafb;
}
.error-banner.data-v-82517712 {
    background: #2d1b1b;
    border-color: #3c2626;
}
.error-text.data-v-82517712 {
    color: #f87171;
}
}

/* 无障碍支持 */
@media (prefers-reduced-motion: reduce) {
.empty-circle.data-v-82517712,
  .loading-spinner.data-v-82517712 {
    animation: none;
}
.back-btn.data-v-82517712,
  .detail-btn.data-v-82517712 {
    transition: none;
}
}
