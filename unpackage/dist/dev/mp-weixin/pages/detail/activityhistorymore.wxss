.load-more-container {
	padding: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.loading-tip {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 20rpx 0;
}
.empty-tip {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 100rpx 0;
	color: #999;
	font-size: 28rpx;
}
