.navbar-title {
  font-size: 20px;
  font-weight: bold;
  color: white;
  margin-bottom: 10px; /* 与左侧“新闻”一致的垂直视觉位置 */
}
.navbar-center {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 10px;
  pointer-events: none;
  transform: translateY(10px); /* 替代 margin-top */
}


