/* 导航栏 */
.navbar-title.data-v-e4e5fb8d {
  font-size: 20px;
  font-weight: bold;
  color: white;
  margin-bottom: 10px;
  text-align: left;
}
/* 页面容器 */
.container.data-v-e4e5fb8d {
  background-color: #f5f5f5;
  min-height: 100vh;
}
/* 筛选包裹容器：用于相对定位 */
.filter-wrapper.data-v-e4e5fb8d {
  position: relative;
  z-index: 1;
}
/* 筛选栏 */
.filter-bar.data-v-e4e5fb8d {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
}
/* 筛选项 */
.filter-item.data-v-e4e5fb8d {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-right: 40rpx;
}
/* 下拉箭头 */
.arrow.data-v-e4e5fb8d {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #999;
  margin-left: 10rpx;
  transition: transform 0.2s ease;
}
.arrow.open.data-v-e4e5fb8d {
  transform: rotate(180deg);
}
/* 下拉列表浮动样式 */
.dropdown-list.data-v-e4e5fb8d {
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 10rpx 0;
  border-top: 1rpx solid #eee;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}
/* 下拉项 */
.dropdown-item.data-v-e4e5fb8d {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
/* 选中状态 */
.dropdown-item.selected.data-v-e4e5fb8d {
  color: #007aff;
  font-weight: bold;
}
/* 点赞转发评论 */
.card-actions-item.data-v-e4e5fb8d {
		display: flex;
		flex-direction: row;
		align-items: center;
}
.card-actions-item-text.data-v-e4e5fb8d {
	font-size: 12px;
	color: #666;
	margin-left: 5px;
}
.card-actions.data-v-e4e5fb8d {
		display: flex;
		flex-direction: row;
		justify-content: space-around;
		align-items: center;
		height: 45px;
		border-top: 1px #eee solid;
}
