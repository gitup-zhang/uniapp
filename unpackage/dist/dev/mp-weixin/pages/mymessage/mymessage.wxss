.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.header {
  background: linear-gradient(to right, #ff4d4f, #ff7a7a);
  height: 300px;
  padding: 0 20px;
  position: relative;
}
.header .status-bar {
  height: var(--status-bar-height);
}
.header .header-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 35rpx;
}
.header .header-top-bar .title-text {
  font-size: 20px;
  font-weight: bold;
  color: #fff;
}
.header .header-top-bar .settings-icon {
  width: 30px;
  height: 30px;
}
.header .header-content {
  display: flex;
  align-items: center;
  padding-top: 50rpx;
}
.header .header-content .avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  border: 2px solid #fff;
  margin-right: 15px;
}
.header .header-content .user-info {
  display: flex;
  flex-direction: column;
  color: #fff;
}
.header .header-content .user-info .username {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 4px;
}
.header .header-content .user-info .slogan {
  font-size: 14px;
  opacity: 0.9;
}
.main-content {
  position: relative;
  z-index: 2;
  padding: 0 16px;
  margin-top: -50px;
}
.card {
  background-color: #fff;
  border-radius: 14px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
  padding: 20px;
}
.top-section {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}
.top-section .icon {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
.top-section .title-group {
  display: flex;
  flex-direction: column;
}
.top-section .title-group .card-title {
  font-weight: bold;
  font-size: 16px;
  color: #333;
}
.top-section .title-group .card-number {
  font-size: 24px;
  font-weight: bold;
  color: #ff4d4f;
  margin-top: 4px;
}
.bottom-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-section .bottom-item {
  flex: 1;
  text-align: center;
}
.bottom-section .bottom-item .bottom-number {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.bottom-section .bottom-item .bottom-label {
  font-size: 13px;
  color: #888;
  margin-top: 2px;
}
.bottom-section .vertical-line {
  width: 1px;
  height: 40px;
  background-color: #eee;
  margin: 0 10px;
}