.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}
.header {
  background: linear-gradient(to right, #ff4d4f, #ff7a7a);
  padding: 0 20rpx;
  padding-top: env(safe-area-inset-top);
  position: relative;
  height: 600rpx;
  box-sizing: border-box;
}
.header .status-bar {
  height: var(--status-bar-height);
}
.header .header-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}
.header .header-top-bar .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}
.header .header-top-bar .settings-icon {
  width: 60rpx;
  height: 60rpx;
}
.header .header-content {
  display: flex;
  align-items: center;
  padding-top: 150rpx;
}
.header .header-content .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 30rpx;
}
.header .header-content .user-info {
  display: flex;
  flex-direction: column;
  color: #fff;
}
.header .header-content .user-info .username {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.header .header-content .user-info .slogan {
  font-size: 28rpx;
  opacity: 0.9;
}
.main-content {
  position: relative;
  z-index: 2;
  padding: 0 32rpx;
  margin-top: -100rpx;
}
.card {
  background-color: #fff;
  border-radius: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.08);
  padding: 40rpx;
}
.top-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.top-section .icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.top-section .title-group {
  display: flex;
  flex-direction: column;
}
.top-section .title-group .card-title {
  font-weight: bold;
  font-size: 32rpx;
  color: #333;
}
.top-section .title-group .card-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-top: 8rpx;
}
.bottom-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom-section .bottom-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom-section .bottom-item .bottom-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.bottom-section .bottom-item .bottom-label {
  font-size: 26rpx;
  color: #888;
  margin-top: 4rpx;
}
.bottom-section .vertical-line {
  width: 2rpx;
  height: 80rpx;
  background-color: #eee;
  margin: 0 20rpx;
}
